

#include<iostream>
#include <bits/stdc++.h>
using namespace std;
struct Edge{
    int u,v,w;
};
int main()
{
   int n=5;
   int m=8;
vector<Edge> edges = {
        {0, 1, -1},
        {0, 2, 4},
        {1, 2, 3},
        {1, 3, 2},
        {1, 4, 2},
        {3, 2, 5},
        {3, 1, 1},
        {4, 3, -3}
    };

    int src=0;
    vector<int> dist(n,INT_MAX);
    dist[src]=0;

    for(int i=1;i<=n-1;i++){
        for(auto e: edges){
            if(dist[e.u]!=INT_MAX && dist[e.u]+e.w<dist[e.v]){
                dist[e.v]=dist[e.u]+e.w;
            }
        }
    }

    bool neg=false;

    for(auto e : edges){
        if(dist[e.u]!=INT_MAX && dist[e.u]+e.w<dist[e.v]){
            neg=true;
            break;
        }
    }
    if(neg){
        cout<<"Negative cycle";
    }
    else{
        for(int i=0;i<n;i++){
            cout<<src<<"->"<<i<<"=";
            if(dist[i]==INT_MAX){
                cout<<"INF";
            }
            else{
                cout<<dist[i];
            }
            cout<<endl;
        }
    }
    return 0;
}
