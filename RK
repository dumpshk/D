#include<bits/stdc++.h>
#include<vector>
using namespace std;

int main(){
    string text="abcabcababab";
    string pattern="ab";
    int d=256;
    int h=1;
    int p=0,t=0;
    int q=101;

    int n=text.length();
    int m=pattern.length();

    for(int i=0;i<m-1;i++){
        h=(h*d)%q;
    }

    for(int i=0;i<m;i++){
        p=(p*d+pattern[i])%q;
        t=(t*d+text[i])%q;
    }

    for(int i=0;i<=n-m;i++){
        if(p==t){
            bool match=true;
            for(int j=0;j<m;j++){
                if(text[i+j]!=pattern[j]){
                    match=false;
                    break;
                }
            }
            if(match) cout<<"Pattern found at: "<<i<<endl;
        }

        if(i<n-m){
            t=(d*(t-text[i]*h)+text[i+m])%q;
            if(t<0) t+=q;
        }
    }
    return 0;

}
